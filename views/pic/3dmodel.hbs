<html>
    <head> 
        <meta charset="UTF-8"> 
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <link rel="stylesheet" href="C:/Users/Admin/web1/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="C:/Users/Admin/web1/css/styles.css">
        <link rel="stylesheet" href="C:/Users/Admin/web1/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" href="C:/Users/Admin/web1/bootstrap-social/bootstrap-social.css">
    </head> 
      
    <body>
        <nav class="navbar navbar-dark navbar-expand-sm fixed-top">
             <div class="col-10 col-sm-10" style="text-align: center;">
                <h1 class="word">Upload Pics</h1></div>
                <div class="col-2 col-sm-2">
                 <a href="/base" class="btn btn-primary">Back</a>
                 </div></nav>
        <div class="container">
             <div class="row row-content">   
          <form name="filter" method="post" action="/pic/fil"><div class="col-sm-6">
              <label for="filter">Filter not in filter list? Add one here!</label> 
      <input type="text" id="filter" class="form-control" placeholder="Filter" required
                   value="" name="filter" title="Please enter your model filter"></div><br>
                   <div class="col-sm-2">
                      
                   <button type="submit" class="btn btn-primary">Insert Filter</button>
                  </div> 
                   </form> 
                  
        <form action="/uploadfile" enctype="multipart/form-data" name="models" method="POST">
        <div class="form-group row"> 
                <div class="col-sm-6">
            <label for="name">Image Title</label> 
            </div> 
            <div class="col-sm-6">
            <input type="text" id="name" class="form-control" placeholder="Title" maxlength="16"
                   value="" name="name" title="Please enter a caption for your model" required>  
                   </div> </div> 
                   
        <div> <div class="form-group row"> <div class="col-sm-6">
            <label for="desc">Image Description</label></div> <div class="col-sm-6">
            <input type="text" id="desc" name="desc"  class="form-control" value="" rows="2" maxlength="23"
                      placeholder="Description" title="Please enter your model description" required> 
             </div></div>
        </div> 
     <div class="form-group row"> 
                <div class="col-sm-6">
            <label for="price">Price</label> 
            </div> 
            <div class="col-sm-6">
            <input type="text" id="price" class="form-control" placeholder="Price" 
                   value="" name="price" title="Please enter your image price" required>  
                   </div> </div>
            <div class="form-group row"> 
                <div class="col-sm-6">        <label for="cars">Choose a filter:</label>
                <p>Hold down the Ctrl (windows) / Command (Mac) button to select multiple options.</p>
                 </div><div class="col-sm-2">
 <select id="filters" name="filters" multiple required>{{#each cap1}}
    <option value="{{#each this}}{{this.name}}{{/each}}">{{#each this}}{{this.name}}{{/each}}</option> {{/each}}
  </select></div> 
  </div>

        <div><div class="form-group row"> <div class="col-sm-6">
            <label for="image">Upload Image</label></div> <div class="col-sm-6">
            <input type="file" id="image" 
                   name="image" value="" required> 
        </div> </div> </div>
        <div><div class="form-group row"> <div class="col-sm-6"></div><div class="col-sm-6">
            <button type="submit" class="btn btn-primary">Submit</button> 
        </div> </div></div>
        </form>  {{#if success}}<div class="alert alert-success"  role="alert">{{success}}</div>
            {{else}} {{#if error}}<div class="alert alert-danger"  role="alert">{{error}}</div>
            {{else}}{{/if}}{{/if}}
       <!--- <form action="/uploadmultiple" enctype="multipart/form-data" method="POST">
            <input type="file" name="myFiles" multiple>
            <input type="submit" value="Upload your files">
            </form> -->
            
            <hr> 
            
    
                    
    {{#if item}} <h1>Uploaded Image</h1> <hr><table><tr><td>
    <img src="data:img/fbx;base64,{{item}}" height="180" width="250"> </td>
    <td>&nbsp;</td>
    <td><B>Name</B>: {{name}}<br>
   <B> Caption</B>: {{desc}}<br>
    <B>Price</B>: Rs.{{price}}/-<br>
    <B> Filters</B>: {{filter}}</td>
    </tr></table>
    {{/if}}
       
     
    <script src="C:/Users/Admin/web1/jquery/dist/jquery.slim.min.js"></script>
    <script src="C:/Users/Admin/web1/popper.js/dist/umd/popper.min.js"></script>
    <script src="C:/Users/Admin/web1/bootstrap/dist/js/bootstrap.min.js"></script>
    </body>
  
</html>